{
  "version": 2,
  "builds": [
    {
      "src": "api/lyrics.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/lyrics",
      "destination": "/api/lyrics.js"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ]
}